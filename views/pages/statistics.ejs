<!-- noAjax -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script>
    function chart(id, res, type = 'bar') {
        let labels = [], data = [], colors = [];
        res.forEach(c => {
            labels.push(c.data != null ? c.data : 'Unknown');
            data.push(c.count);
            colors.push(`rgba(${rangedRandom(0, 255)}, ${rangedRandom(0, 255)}, ${rangedRandom(0, 255)}, .2)`)
        });

        new Chart(document.getElementById(id).getContext('2d'), {
            type: type,
            data: {
                labels: labels,
                datasets: [{
                    label: 'Visits per ' + id,
                    data: data,
                    backgroundColor: colors,
                    borderColor: 'rgba(255, 99, 132, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                // scales: { yAxes: [{ ticks: { beginAtZero: true } }] }
            }
        });
    }

    request('/statistics/countries').then(res => {
        chart('countries', JSON.parse(res.response).slice(0, 10));
    });

    request('/statistics/resources').then(res => {
        chart('resources', JSON.parse(res.response).slice(0, 10));
    });

    request('/statistics/hours').then(res => {
        chart('hours', JSON.parse(res.response));
    });

    request('/statistics/browsers').then(res => {
        chart('browsers', JSON.parse(res.response).slice(0, 10), 'pie');
    });

    request('/statistics/os').then(res => {
        chart('os', JSON.parse(res.response).slice(0, 10), 'pie');
    });
</script>